<h6 class="pull-left">Price: 
	<span style="color: green"><%= number_to_currency product.price %></span>
</h6>

<%= form_for order_item, product_id: product.id, remote: true do |f| %>  
	<div class="input-group">
		<%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
		<div class="input-group-btn">
			<%= f.hidden_field :product_id, value: product.id %>
			<%= f.submit "+ Add", :style=>"margin-left:0px", class: "btn btn-primary form-control" %>
		</div>
	</div>
<% end %>
